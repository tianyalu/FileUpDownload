<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="vertical"
    tools:context="com.sty.file.up.download.MainActivity">

    <EditText
        android:id="@+id/et_filepath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="/storage/emulated/0/aapic/beauty.jpg"
        android:hint="请输入要上传文件的URL"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="上传"/>


    <EditText
        android:id="@+id/et_thread_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入下载文件的线程个数"
        android:text="5"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/btn_delete_sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_marginTop="5dp"
        android:text="清空SharedPreferences"/>

    <Button
        android:id="@+id/btn_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:text="下载 beauty.mp4"/>

    <LinearLayout
        android:id="@+id/ll_progress_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">
    </LinearLayout>



    <EditText
        android:id="@+id/et_file_download_path_xutils"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入下载文件URL地址"
        android:text="http://192.168.1.8/newsServiceHM/ColorCop.exe"
        android:layout_marginTop="30dp"/>
    <Button
        android:id="@+id/btn_download_xutils"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:text="下载 ColorCop.exe"/>
</LinearLayout>
